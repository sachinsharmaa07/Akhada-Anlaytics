# ── MongoDB Atlas ──
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/akhada_analytics?retryWrites=true&w=majority

# ── Server ──
PORT=5001
NODE_ENV=development

# ── JWT ──
JWT_SECRET=change_me_to_a_strong_random_secret
JWT_REFRESH_SECRET=change_me_to_another_strong_random_secret

# ── Google OAuth ──
GOOGLE_CLIENT_ID=your_google_client_id
